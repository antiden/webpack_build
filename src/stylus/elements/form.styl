// forms
.layout
.modal_form
  input:not([type="checkbox"]):not([type="radio"]):not([type="button"]):not([type="submit"])
  textarea
  select
    background none
    border 1px solid @css {rgb(var(--main_graydark))}
    padding 0 15px
    height var(--button_height)
    font-size 1em
    border-radius var(--border_radius)
    font-family var(--main_regular)
    width 100%
    box-sizing border-box
    outline none
    transition all 0.3s

    &:focus
      box-shadow 0 0 0 3px @css {rgba(var(--main_dark), 0.2)}

    &[type="checkbox"]
      width auto
      margin 3px 5px 0 0
      float left

    &[readonly="readonly"]
      background @css {rgb(--main_white)} !important
      border 1px solid @css {rgba(var(--main_dark), 0.2)}

    &[type="submit"]
      &[disabled]
        opacity 0.5

  textarea
    width 100%
    height auto
    max-height 130px
    padding 15px

  select
    appearance none
    -moz-appearance none
    -webkit-appearance none
    padding 5px 40px 5px 15px
    display inline-flex
    align-items center
    justify-content center
    background-image linear-gradient(45deg, transparent 50%, gray 50%), linear-gradient(135deg, gray 50%, transparent 50%)
    background-position calc(100% - 20px) calc(1em + 6px), calc(100% - 15px) calc(1em + 6px)
    background-size 5px 5px, 5px 5px
    background-repeat no-repeat

  .form__row
    display flex
    align-items flex-start
    margin 0 -10px 20px

    > .form__item
      flex 1
      margin 0 10px

    +below(400px)
      margin 0
      display block

      > .form__item
        margin 0 0 15px

  .form__item
    &.error
      input:not([type="checkbox"]):not([type="radio"]):not([type="button"]):not([type="submit"])
      textarea
      select
        border-color @css {rgb(var(--main_red))}

  .form__term
    font-size 0.9em
    line-height 1.4em
    color @css {rgba(var(--main_dark), 0.5)}
    margin-top 20px

    a
      link()

  .form__textarea
    margin-bottom 20px
    
    > span
      display flex

  .form__actions
    display flex
    align-items center

    +below(768px)
      flex-wrap wrap

  .form__submit
    display flex
    align-items center

    +below(768px)
      order 1

    button
      flex 1

  .form__upload
    display flex
    align-items center

    +below(768px)
      width 100%
      margin-bottom 20px

    label
      display flex
      align-items center
      cursor pointer
      flex-wrap wrap
      transition all 0.3s

      &:hover
        color @css {rgb(var(--main_color))}

    i
      color @css {rgb(var(--main_color))}
      margin-right 5px

    p
      margin 0

.form__message
  background @css {rgba(var(--main_green), 0.1)}
  border 1px solid @css {rgba(var(--main_green), 0.2)}
  padding 15px
  color @css {rgb(var(--main_green))}