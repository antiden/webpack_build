table
  width 100%
  border-collapse collapse
  border 1px solid @css {rgb(var(--main_gray))}
  background @css {rgb(var(--main_white))}
  margin-bottom 15px

  thead
    tr
      background @css {rgb(var(--main_gray))}

      th
        padding 15px
        text-align left

  tbody
    tr
      border-bottom 1px solid @css {rgb(var(--main_gray))}
      transition 0.3s

      &:last-child
        border-bottom none

      td
        padding 15px

      &:hover
        background @css {rgba(var(--main_gray), 0.3)}
        transition 0.3s

// custom table
.gtable
  display table
  width 100%
  border-collapse collapse

.gtr
  width auto
  display table-row

.gth
.gtd
  display table-cell
  width auto
  padding 10px
  border 1px solid @css {rgb(var(--main_graydark))}
  vertical-align middle

  svg
    svg()
    margin-right 5px

.gth
  font-family var(--font_bold)
  background @css {rgb(var(--main_gray))}