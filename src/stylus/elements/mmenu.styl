.mobile_menu
  fixed top right
  background @css{rgb(var(--main_white))}
  width 100%
  max-width 400px
  height 100%
  display flex
  align-items center
  justify-content flex-start
  box-shadow @css{rgba(var(--main_dark), 0.15)} -10px 0 30px
  z-index 200

  .mm_button
    absolute top right
    margin 30px 30px 0 0

  nav
    width 100%

    ul
      list-style none
      padding 0
      margin 0

      li
        a
          display block
          padding 10px 30px

