.mobile_menu
  fixed top right -100%
  background @css{rgb(var(--main_white))}
  width 100%
  max-width 400px
  height 100%
  display flex
  align-items center
  justify-content center
  transition all cubic-bezier(.8,.01,.31,.99) 0.7s
  z-index 200

  .mm_button_close
    absolute top right
    margin 30px 30px 0 0

  nav
    width 100%
    margin auto
    overflow-y auto
    padding 30px 0
    max-height 100%

    ul
      list-style none
      padding 0
      margin 0

      li
        a
          display block
          padding 10px 30px

          &:hover
            padding-left 35px

.mmBb
  opacity 0
  pointer-events none
  fixed left top
  width 100%
  height 100%
  background @css{rgba(var(--main_dark), 0.5)}
  cursor pointer
  transition all 0.7s
  z-index 150

.mm_open
  overflow hidden

  .mmBb
    opacity 1
    pointer-events auto

  .mobile_menu
    box-shadow @css{rgba(var(--main_dark), 0.15)} -10px 0 30px
    right 0