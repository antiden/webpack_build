button(bg = @css {rgb(var(--main_color))}, border = @css {rgb(var(--main_color))}, color = @css {rgb(var(--main_white))}, hover = @css {rgb(var(--main_color_hover))})
  position relative
  background bg
  color color
  margin 0
  padding 5px 20px
  min-height 50px
  line-height normal
  border 1px solid border
  border-radius 100px
  font-size 1em
  text-transform none
  font-family var(--font_regular)
  cursor pointer
  display inline-flex
  align-items center
  justify-content center
  gap 15px
  text-align center
  overflow hidden
  transition all 0.3s
  z-index 1

  i
    font-size 1.4em

  &::after
    content ''
    position absolute
    display block
    top 0
    right 0
    width 0
    height 100%
    background hover
    transition all 0.3s cubic-bezier(0.42, 0, 0.58, 1)
    z-index -1

  &:hover
    color @css{rgb(var(--main_white))}
    border-color hover
    gap 20px

    &::after
      width 100%
      left 0
      right auto

  &:active
    transform scale(0.95)