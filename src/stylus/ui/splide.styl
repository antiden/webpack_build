.carousel__arrow
  position relative
  display flex
  align-items center
  gap 20px

.splide__pagination
  list-style none
  display flex
  align-items center
  gap 5px

  li
    display flex !important
    align-items center

    button
      width 10px
      height 10px
      background transparent
      border 1px solid @css{rgba(var(--dark), 0.1)}
      border-radius 50%
      cursor pointer
      position relative

      &::before
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background @css{rgb(var(--main_hover))}
        border-radius 50%
        transform scale(0)
        transition transform 0.3s
    
      &:hover
        border-color @css{rgb(var(--main_hover))}

        &::before
          transform scale(1)

      &.is-active
        background @css{rgb(var(--dark))}
        border-color @css{rgb(var(--dark))}

        &::before
          display none

.splide__arrows
  display flex
  align-items center
  gap 5px

  .splide__arrow
    width 50px
    height 50px
    border-radius 15px
    border 1px solid @css{rgba(var(--dark), 0.1)}
    display flex
    align-items center
    justify-content center
    background transparent
    cursor pointer
    transition all 0.3s
    position relative
    z-index 1

    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background @css{rgb(var(--main_hover))}
      border-radius 14px
      transform scale(0)
      transition transform 0.3s
      z-index -1
  
    &:hover
      border-color @css{rgb(var(--main_hover))}
      color @css{rgb(var(--white))}

      &::before
        transform scale(1)