/**************Preloader**************/
/*Preloader*/
.ajax-progress
.ajax-progress-throbber
    fixed left top
    width 100%
    height 100vh
    display flex
    align-items center
    justify-content center
    text-align center
    background @css {rgba(var(--main_dark), 0.1)}
    font-size 0px
    z-index 99999

    &:before
        content ''
        width 40px
        height 40px
        display inline-block
        padding 0px
        background-image none
        background none
        border-radius 100%
        border 2px solid
        border-top-color @css {rgba(var(--main_dark), 0.65)}
        border-bottom-color rgba(0,0,0, 0.15)
        border-left-color @css {rgba(var(--main_dark), 0.65)}
        border-right-color rgba(0,0,0, 0.15)
        animation throbber 0.8s linear infinite

    div
    span
        display none !important

@keyframes throbber {
    from {
        transform: rotate(0deg)
    }
    to {
        transform: rotate(360deg)
    }
}