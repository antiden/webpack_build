.webform-confirmation
  background @css {rgba(var(--main_green), 0.1)}
  border 1px solid @css {rgba(var(--main_green), 0.2)}
  padding 15px
  border-radius 5px

  a
    link()

.webform-confirmation__message
  margin 0 0 0.5em 0

.webform-confirmation__back
  margin 0

.form__subtitle
  max-width 800px
  margin 0 auto
  font-size 0.9em
  line-height 1.5em
  position relative
  margin-bottom 20px

  a
    link()  

.form__submit
  position relative
  display flex
  align-items center

.form__terms
  margin 10px 0 0
  font-size 0.8em
  opacity 0.5
  line-height 1.4em
  transition opacity 0.3s
  position relative

  a
    link()

  &:hover
    opacity 1